    <template id="report_saleorder_amount_in_words"
              inherit_id="sale.report_saleorder_document">
      <!-- Inserta cerca del total (ajusta el xpath segÃºn tu layout si lo deseas) -->
      <xpath expr="//div[contains(@class, 'row')][last()]" position="after">
        <div class="mb-2">
          <p class="text-end lh-sm"
             t-if="doc.company_id.display_sale_amount_total_words">
