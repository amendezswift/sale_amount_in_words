<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <template id="report_saleorder_amount_in_words"
              inherit_id="sale.report_saleorder_document">
      <xpath expr="//div[@name='total']//table/*[@t-call='sale.document_tax_totals']" position="after">
        <tr t-if="doc.company_id.display_sale_amount_total_words">
          <td class="text-end">
            <span>Total en letras</span>
          </td>
          <td class="text-end">
            <small class="text-muted">
              <span t-field="doc.amount_total_words"/>
            </small>
          </td>
        </tr>
      </xpath>
    </template>

  </data>
</odoo>
